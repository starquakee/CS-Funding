{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
//  "exclude": [
//    "src/**/*.ts",
//    "src/**/*.tsx",
//    "src/**/*.vue"
//  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "linterOptions": {
    "exclude": [
      "src/**",
      "components/**"
    ]
  }
}
